{% extends 'layout.html.twig' %}

{% block title %}Liste des produits | Shoefony{% endblock %}

{% block content %}
    <div class="row">
        <div class="row">
            <div class="col-md-3">
                {{ render(controller('App\\Controller\\StoreController::listBrands', {'brandId': brandId ?? null})) }}
            </div>
        </div>

        <div class="col-md-9">
            <p class="lead">Nos produits " Toutes les marques "</p>

            <div class="row text-center">
                {% for product in products %}
                    <div class="col-md-4 col-sm-6 hero-feature">
                        <div class="thumbnail">
                            <img src="{{ asset('assets/img/products/' ~ product.image.url)  }}" class="img-fluid img-responsive" alt="{{ product.image.alt }}">
                            <div class="caption">
                                <h5 class="text-primary">{{ product.brand.name }}</h5>
                                <h3>{{ product.name | capitalize }}</h3>
                                <p>{{ product.description }}</p>
                                <p>
                                    <span class="badge">{{ product.price|format_currency('EUR') }}</span>
                                    <a href="{{ path('store_detail_product', {'id': product.id, 'slug': product.slug}) }}" class="btn btn-default">Voir la fiche</a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <h1>Aucun produit</h1>
                {% endfor %}

            </div>

            <div class="row text-center">
                <nav>
                    <ul class="pagination pagination-lg">
                        <li>
                            <a href="#" aria-label="Précédent">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active">
                            <a href="#1">1</a>
                        </li>
                        <li>
                            <a href="#2">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">4</a>
                        </li>
                        <li>
                            <a href="#">5</a>
                        </li>
                        <li>
                            <a href="#" aria-label="Suivant">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}